/* pages/posts/post-detail/post-detail.wxss */
.container {
  display: flex; /*弹性盒子模型*/
  flex-direction: column; /*布局方式为列布局*/
}

.head-image {
  width: 100%;
  height: 460rpx;
}

.audio {
  width: 102rpx;
  height: 110rpx;
  position: absolute; /*绝对定位*/
  left: 50%;
  top: 180rpx;
  opacity: 0.6; /*透明度*/
}

.author-date {
  flex-direction: row; /*布局方式为行布局*/
  margin-left: 30rpx;
  margin-top: 20rpx;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle; /*与其它元素居中对齐*/
}

.author {
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #666;
}

.const-text {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

.date {
  font-size:24rpx;
  margin-left: 30rpx;
  vertical-align: middle;
  color: #999;
}

.title {
  margin-left: 40rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 2px; /*字体间距*/
  color: #4b556c;
}

.tool {
  margin-top: 20rpx;
}

.circle-img {
  float: right; /*浮动*/
  margin-right: 40rpx;
  vertical-align: middle;
}

.circle-img Image {
  display: inline-block;
  width: 74rpx;
  height: 74rpx;
  vertical-align: middle;
}

.share-img {
  margin-left: 30rpx;
}

.horizon {
  width: 660rpx;
  height: 1px;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative; /*相对定位*/
  top: 46rpx;
  margin: 0 auto;
  z-index: -99;
}

.detail {
  color: #666;
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
}